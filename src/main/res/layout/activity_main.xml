<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/calendarHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FEBRUARY 2026"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:alignmentMode="alignBounds">
        <TextView android:text="S" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
        <TextView android:text="M" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
        <TextView android:text="T" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
        <TextView android:text="W" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
        <TextView android:text="T" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
        <TextView android:text="F" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
        <TextView android:text="S" android:layout_gravity="center" android:padding="8dp" android:textStyle="bold"/>
    </GridLayout>

    <GridView
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="7"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"/>

</LinearLayout>

